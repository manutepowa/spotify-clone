{
  "extends": ["standard", "plugin:prettier/recommended", "plugin:@typescript-eslint/recommended"],
  "plugins": [
    "@typescript-eslint",
    "prettier"
  ],
  "globals": { "fetch": false },
  "rules": {
    "no-use-before-define": "off",
    "react/react-in-jsx-scope": "off",
    "no-unused-vars": 0,
    "prettier/prettier": [
      "error",
       {
        "parser": "flow",
        "indent": [
          "error",
          2
        ],
        "singleQuote": false,
        "semi": false,
        "endOfLine":"auto",
        "useTabs": false
      },
      {
        "usePrettierrc": false
      }
    ]
  }
}
